<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/text_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_super_big"
        android:textColor="?text_color_first"
        android:layout_margin="16dp"
        android:text="提示"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text_view_message_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="?text_color_first"
            android:textSize="@dimen/text_size_big"
            android:layout_margin="16dp"/>
    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_msg_dialog_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_msg_dialog_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_msg_dialog_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="右侧"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>