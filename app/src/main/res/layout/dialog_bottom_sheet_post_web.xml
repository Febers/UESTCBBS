<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layerType="hardware">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary">
        <Button
            android:id="@+id/btn_close_web_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="关闭"/>
        <Button
            android:id="@+id/btn_open_in_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="浏览器打开"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_bar_post_detail_web_view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <com.febers.uestc_bbs.view.custom.InterceptTouchLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/web_view_post_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layerType="software">
        </WebView>
    </com.febers.uestc_bbs.view.custom.InterceptTouchLayout>

</LinearLayout>