<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_view_pm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2018-3-1"
        android:layout_margin="2dp"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/linear_layout_pm_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:background="@drawable/ic_pm_list_bg_left"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_pm_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:background="@drawable/ic_pm_list_bg_right"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>