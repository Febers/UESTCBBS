<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/bottom_navigation_height"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/text_view_title_campus"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="成电校园"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textColor="?attr/text_color_second"
        android:visibility="gone"/>
    <com.febers.uestc_bbs.view.custom.CustomGridView
        android:id="@+id/grid_view_campus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3">
    </com.febers.uestc_bbs.view.custom.CustomGridView>

    <TextView
        android:id="@+id/text_view_title_tech"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="科技交流"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textColor="?attr/text_color_second"
        android:visibility="gone"/>
    <com.febers.uestc_bbs.view.custom.CustomGridView
        android:id="@+id/grid_view_tech"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3">
    </com.febers.uestc_bbs.view.custom.CustomGridView>

    <TextView
        android:id="@+id/text_view_title_play"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="休闲娱乐"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textColor="?attr/text_color_second"
        android:visibility="gone"/>
    <com.febers.uestc_bbs.view.custom.CustomGridView
        android:id="@+id/grid_view_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3">
    </com.febers.uestc_bbs.view.custom.CustomGridView>

    <TextView
        android:id="@+id/text_view_title_market"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="跳蚤市场"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textColor="?attr/text_color_second"
        android:visibility="gone"/>
    <com.febers.uestc_bbs.view.custom.CustomGridView
        android:id="@+id/grid_view_market"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3">
    </com.febers.uestc_bbs.view.custom.CustomGridView>

    <TextView
        android:id="@+id/text_view_title_manager"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="站务管理"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:textColor="?attr/text_color_second"
        android:visibility="gone"/>
    <com.febers.uestc_bbs.view.custom.CustomGridView
        android:id="@+id/grid_view_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:layout_marginBottom="@dimen/bottom_navigation_height">
    </com.febers.uestc_bbs.view.custom.CustomGridView>
</LinearLayout>