<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30dp"
    android:paddingEnd="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:foreground="?android:attr/selectableItemBackground">
    <TextView
        android:id="@+id/text_view_item_detail_param"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_small"
        android:textColor="?attr/text_color_second"
        android:layout_margin="1dp"
        android:text="名字"/>

    <TextView
        android:id="@+id/text_view_item_detail_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_super_big"
        android:maxLines="10"
        android:ellipsize="end"
        android:layout_margin="1dp"
        android:textColor="?attr/text_color_first"
        android:text="张三" />
</LinearLayout>