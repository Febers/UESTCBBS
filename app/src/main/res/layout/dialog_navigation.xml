<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xic_navigation_blue_24dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="河畔导航"
            android:textSize="@dimen/text_size_super_big"
            android:padding="20dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_lost_and_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失物招领"
            android:textSize="@dimen/text_size_big"
            android:textColor="?text_color_first"
            android:padding="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navigation_school_bus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校车时刻表"
            android:textSize="@dimen/text_size_big"
            android:textColor="?text_color_first"
            android:padding="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navigation_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="校历"
            android:textSize="@dimen/text_size_big"
            android:textColor="?text_color_first"
            android:padding="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navigation_newer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手导航"
            android:textSize="@dimen/text_size_big"
            android:textColor="?text_color_first"
            android:padding="12dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/navigation_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_gravity="end"/>
</LinearLayout>