<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_block_list"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="清水河畔">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="成电校园"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:textColor="@color/material_grey_800"/>
            <com.febers.uestc_bbs.view.custom.CustomGridView
                android:id="@+id/grid_view_compus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3">
            </com.febers.uestc_bbs.view.custom.CustomGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="科技交流"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:textColor="@color/material_grey_800"/>
            <com.febers.uestc_bbs.view.custom.CustomGridView
                android:id="@+id/grid_view_tech"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3">
            </com.febers.uestc_bbs.view.custom.CustomGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="休闲娱乐"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:textColor="@color/material_grey_800"/>
            <com.febers.uestc_bbs.view.custom.CustomGridView
                android:id="@+id/grid_view_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3">
            </com.febers.uestc_bbs.view.custom.CustomGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="跳蚤市场"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:textColor="@color/material_grey_800"/>
            <com.febers.uestc_bbs.view.custom.CustomGridView
                android:id="@+id/grid_view_market"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3">
            </com.febers.uestc_bbs.view.custom.CustomGridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="站务管理"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="4dp"
                android:textColor="@color/material_grey_800"/>
            <com.febers.uestc_bbs.view.custom.CustomGridView
                android:id="@+id/grid_view_manager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:layout_marginBottom="@dimen/bottom_navigation_height">
            </com.febers.uestc_bbs.view.custom.CustomGridView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>