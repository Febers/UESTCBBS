<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <com.febers.uestc_bbs.view.custom.CircleColorView
        android:id="@+id/color_view_user_now"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:color="?colorPrimary"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/text_view_user_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/developer_name"
        android:layout_margin="14dp"
        android:textSize="@dimen/text_size_super_big"
        android:textColor="?android:textColorPrimary"
        android:layout_gravity="center"/>
    <ImageButton
        android:id="@+id/btn_delete_user"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_margin="14dp"
        android:background="@drawable/xic_delete_red" />
</LinearLayout>