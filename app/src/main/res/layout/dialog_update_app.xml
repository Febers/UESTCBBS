<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_view_update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发现新版本"
        android:gravity="center"
        android:textSize="@dimen/text_size_super_big"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/text_view_update_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="5.16MB， 2018/8/12"/>

    <TextView
        android:id="@+id/text_view_update_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/text_size_big"
        android:text="1、优化界面
2、修复bug
3、添加新功能"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_update_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/btn_update_enter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:text="更新"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>