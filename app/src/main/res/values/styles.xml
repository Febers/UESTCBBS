<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_gray</item>
        <item name="colorAccent">@color/color_gray_deeper</item>
        <item name="colorPrimaryDark">@color/color_gray_deeper</item>
        <item name="app_color_primary">@color/color_gray</item>
        <item name="app_color_accent">@color/color_gray_deeper</item>

        <item name="text_color_first">@color/textColorFirst_Day</item>
        <item name="text_color_second">@color/textColorSecond_Day</item>
        <item name="text_color_third">@color/textColorThird_Day</item>

        <item name="background_first">@color/color_white</item>
        <item name="background_second">@color/color_gray_light</item>

        <item name="refresh_layout_color_accent">@color/color_white</item>
        <item name="android:textColorPrimary">@color/textColorFirst_Day</item>
        <item name="android:textColorSecondary">@color/textColorSecond_Day</item>
        <item name="android:windowIsTranslucent">true</item> <!-- 让activity不闪屏 -->
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_black_tint</item>
        <item name="colorAccent">@color/color_black_tint</item>
        <item name="colorPrimaryDark">@color/color_gray_deeper</item>
        <item name="app_color_primary">@color/color_black_tint</item>
        <item name="app_color_accent">@color/color_black_tint</item>

        <item name="text_color_first">@color/color_white</item>
        <item name="text_color_second">@color/color_gray_light</item>
        <item name="text_color_third">@color/color_gray</item>

        <item name="background_first">@color/color_black_tint</item>
        <item name="background_second">@color/color_gray</item>

        <item name="refresh_layout_color_accent">@color/color_white</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_gray_light</item>
        <item name="android:windowIsTranslucent">true</item> <!-- 让activity不闪屏 -->
        <item name="android:windowAnimationStyle">@style/MyWindowAnimTheme</item>
    </style>


    <style name="MyWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_to_top_in</item>
        <item name="android:activityOpenExitAnimation">@anim/do_nothing_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/do_nothing_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/top_to_bottom_out</item>
    </style>

    <style name="ImageViewerTheme" parent="AppThemeLight">
        <item name="android:windowAnimationStyle">@style/ImageViewerAnim</item>
    </style>

    <style name="ImageViewerAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/do_nothing_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/do_nothing_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="PinkBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/color_pink</item>
        <item name="colorPrimaryDark">@color/color_pink</item>
        <item name="colorAccent">@color/color_pink</item>
    </style>

    <style name="myTransparent" parent="AppThemeLight">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
